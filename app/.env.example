# Application Environment Configuration
APP_ENV=production
APP_DEBUG=false
APP_NAME="AWS PHP Data Platform"

# Database Configuration
DB_HOST=your-aurora-cluster-endpoint
DB_PORT=3306
DB_NAME=aws_php_platform
DB_USERNAME=admin
DB_PASSWORD=your-password

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key

# Secrets Manager
SECRETS_MANAGER_SECRET_NAME=aurora-credentials

# CloudWatch Logging
CLOUDWATCH_LOG_GROUP=/aws/ec2/php-app
CLOUDWATCH_LOG_STREAM=application

# Application Settings
LOG_LEVEL=info
MAX_EXECUTION_TIME=300
MEMORY_LIMIT=512M